{
  "manifest_version": 2,
  "name": "offline Bookmark Manager",
  "version": "5.0.3",
  "author": "",
  "description": "Bookmark Viewer/Editor: no uploads reqd.(offline), full tab view.",
  "offline_enabled": true,

  "icons": {
    "16": "images/16.png",
    "32": "images/32.png",
    "48": "images/48.png",
    "128": "images/128.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "16": "images/16.png",
      "32": "images/32.png",
      "48": "images/48.png",
      "128": "images/128.png"
    },
    "default_title": "Displays all bookmarks in new tab."
  },
  "permissions": ["bookmarks", "storage", "chrome://favicon/"],

  "incognito": "split",
  "commands": {
    "_execute_browser_action": {
      "suggested_key": { "default": "Ctrl+Shift+F" }
    }
  }
}
